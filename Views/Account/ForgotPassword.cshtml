@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h2>@ViewData["Title"]</h2>
<h4>Enter your email.</h4>

<div class="container">
    <div class="row">
        <div class="col-md-5 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-lock"></span> Login</div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="panel-body">
                    <form class="form-horizontal" asp-action="ForgotPassword" method="post">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-md-3 control-label">
                                Email</label>
                            <div class="col-md-9">
                                <input asp-for="Email" type="email" class="form-control" id="inputEmail3" placeholder="Email" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                       
                        <div class="form-group last">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-success btn-sm">
                                    Reset</button>

                            </div>
                        </div>
                    </form>
                </div>
                <div class="panel-footer">
                    Not Registred? <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" >Register here</a>
                    Forget Login <a asp-action="ForgotPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" >Forget Password</a>
                    </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
