@model to.mo.Models.ProductViewModels.ProductAdd

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="well">New Ad</h1>
	<div class="col-lg-12 well">
		<div class="row">
			<form asp-controller="ProductAdd"  asp-action="Create">
				<div class="col-sm-12"/>
				<div class="row">
					<div class="col-sm-6 form-group">
						<label>Title of Your Ad</label>
						<input asp-for="Title" class="form-control" placeholder="Enter ad title"/>
						<span asp-validation-for="Title" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label>Description</label>
					<textarea asp-for="Description" placeholder="Enter Description Here.." rows="3" class="form-control"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="row">
					<div class="col-sm-6 form-group">
						<label>City</label>
						<input asp-for="City" type="text" placeholder="Enter City Name Here.." class="form-control">
						<span asp-validation-for="City" class="text-danger"></span>
					</div>

					<div class="col-sm-6 form-group">
						<label>Company</label>
						<input type="text" placeholder="Enter Company Name Here.." class="form-control">
						<span asp-validation-for="Cauntry" class="text-danger"></span>
					</div>
				
				<div class="col-sm-6  form-group">
					<label>Phone Number</label>
					<input asp-for="PhoneNumber" type="text" placeholder="Enter Phone Number Here.." class="form-control">
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>
				<div class="col-sm-6 form-group">
					<label>Price</label>
					<input asp-for="Price" type="text" placeholder="Enter Price Here.." class="form-control">
					<span asp-validation-for="Price" class="text-danger"></span>
					
				</div>
				<div class="col-sm-12 form-group">
					<input type="submit" value="Create" class="btn btn-lg btn-info">
				</div>
				</div>
			</form> 	
		
		</div>
		
		
		
				
	</div>
	</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
